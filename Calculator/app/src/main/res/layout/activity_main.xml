                android:background="@drawable/roundbut"
                android:layout_marginRight="@dimen/marge"
                android:id="@+id/but6"
                android:layout_width="@dimen/butW"
                android:layout_height="@dimen/butW"
                android:text="@string/six"
                android:textSize="@dimen/text"
        />
